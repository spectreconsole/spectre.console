<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Spectre.Console Contributors</Authors>
    <Description>A .NET library that makes it easier to create beautiful console applications.</Description>
    <PackageId>Spectre.Console</PackageId>
    <RepositoryUrl>https://github.com/spectreconsole/spectre.console</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Wcwidth.Sources" PrivateAssets="all" />
  </ItemGroup>

</Project>
